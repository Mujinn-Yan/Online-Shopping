@model OnlineStoreForWoman.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Product Details</h1>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    
    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.CategoryID</dd>

    
    <dt class="col-sm-2">Unit Price</dt>
    <dd class="col-sm-10">@Model.UnitPrice</dd>

    <dt class="col-sm-2">Previous Price</dt>
    <dd class="col-sm-10">@Model.OldPrice</dd>

    <dt class="col-sm-2">Discount</dt>
    <dd class="col-sm-10">@Model.Discount</dd>

    <dt class="col-sm-2">Stock</dt>
    <dd class="col-sm-10">@Model.UnitInStock</dd>

    <dt class="col-sm-2">Available?</dt>
    <dd class="col-sm-10">@Model.ProductAvailable</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.ShortDescription</dd>

    <dt class="col-sm-2">Picture</dt>
    <dd class="col-sm-10">@Model.PicturePath</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
