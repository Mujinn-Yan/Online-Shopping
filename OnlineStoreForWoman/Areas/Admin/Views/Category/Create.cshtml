            <div class="form-group">
                <div class="custom-file">
                    <input type="file" name="category-image" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                @Html.ValidationMessageFor(model => model.Picture, "", new { @class = "text-danger" })
            </div>*@

            <div class="form-group">
                <div class="custom-file">
                    <input type="file" name="Picture" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                @Html.ValidationMessageFor(model => model.Picture, "", new { @class = "text-danger" })
            </div>



            <div class="form-group">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model => model.IsActive)
                        @Html.LabelFor(model => model.IsActive)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Create</button>
            </div>
        </div>
    </div>

</form>
