@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<title>Login V2</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="icon" type="image/png" href="images/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginlib/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginlib/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginlib/fonts/iconic/css/material-design-iconic-font.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginlib/vendor/animate/animate.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="~/loginlib/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginlib/vendor/animsition/css/animsition.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginlib/vendor/select2/select2.min.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="~/loginlib/vendor/daterangepicker/daterangepicker.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginlib/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/loginlib/css/main.css">
<!--===============================================================================================-->
</head>
<body>
	
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form id="loginForm" asp-controller="Account" asp-action="Login" method="post" class="login100-form validate-form">
                    @Html.AntiForgeryToken()

                    <span class="login100-form-title p-b-26">
                        Welcome
                    </span>
                    @*<span class="login100-form-title p-b-48">
                        <i class="zmdi zmdi-font"></i>
                    </span>
*@
                    <div class="wrap-input100 validate-input" data-validate="Valid email is: a@b.c">
                        @Html.TextBoxFor(m => m.Email, new { @class = "input100", type = "email" })
                        <span class="focus-input100" data-placeholder="Email"></span>
                        @Html.LabelFor(m => m.Email, new { @class = "label-input100" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        @Html.PasswordFor(m => m.Password, new { @class = "input100" })
                        <span class="focus-input100" data-placeholder="Password"></span>
                        @Html.LabelFor(m => m.Password, new { @class = "label-input100" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button id="loginButton" class="login100-form-btn" onclick="submitLoginForm(event)">
                                Login
                            </button>
                        </div>
                    </div>

                    <div class="text-center p-t-115">
                        <span class="txt1">
                            Don’t have an account?
                        </span>

                        <a class="txt2" href="@Url.Action("Register", "Account")">
                            Sign Up
                        </a>
                    </div>

                    @Html.ValidationSummary("", new { @class = "field-validation-error" })
                </form>
            </div>
        </div>
    </div>

    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
	<script src="~/loginlib/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="~/loginlib/vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
	<script src="~/loginlib/vendor/bootstrap/js/popper.js"></script>
	<script src="~/loginlib/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="~/loginlib/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="~/loginlib/vendor/daterangepicker/moment.min.js"></script>
	<script src="~/loginlib/vendor/daterangepicker/daterangepicker.js"></script>
<!--===============================================================================================-->
	<script src="~/loginlib/vendor/countdowntime/countdowntime.js"></script>
<!--===============================================================================================-->
	<script src="~/loginlib/js/main.js"></script>
    @*<script src="~/loginlib/~/loginlib/js/main.js"></script>*@
</body>
</html>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function submitLoginForm(event) {
        event.preventDefault(); // Prevent default form submission



        var formData = $('#loginForm').serialize(); // Get form data as a URL-encoded string

        // Send an AJAX request to the Login endpoint
        $.ajax({
            url: "/Account/Login",
            type: "POST",
            data: formData,
            success: function (response) {
                if (response == "Admin") {
                    window.location.href = "/Admin/Home";
                }
                else if (response == "User") {
                    window.location.href = "/";
                }
                else {
                    // Display an error message if the login was not successful
                    alert("Invalid login attempt.");
                }
                //if (response.token) {
                //    // Store the JWT token in sessionStorage
                //    sessionStorage.setItem('JWTToken', response.token);

                //    // Redirect to a desired page after successful login
                //    window.location.href = "/";
                //}
            },
            error: function (error) {
                // Display an error message if the AJAX request fails
                alert("An error occurred while processing the login request.");
            }
        });
    }

</script>